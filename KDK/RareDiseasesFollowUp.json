{
  "$id": "https://www.bfarm.de/schemas/genomde/RareDiseasesFollowUp",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "followUpRD": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "followUpDate": {
            "type": "string",
            "format": "date",
            "description": "Follow-up date in YYYY-MM-DD format."
          },
          "phenotypes": {
            "type": "array",
            "items": {
              "code": {
                "type": "object",
                "properties": {
                  "allOf": [
                    {
                      "$ref": "https://www.bfarm.de/schemas/genomde/data-types/Coding#"
                    },
                    {
                      "required": [
                        "code",
                        "version"
                      ]
                    }
                  ]
                }
              },
              "change": {
                "type": "string",
                "enum": [
                  "newlyAdded",
                  "improved",
                  "degraded",
                  "omitted"
                ]
              }
            },
            "description": "Phenotyping based on the HPO ontology."
          },
          "gMFCS": {
            "type": "string",
            "enum": [
              "I",
              "II",
              "III",
              "IV",
              "V"
            ],
            "description": "GMFCS level. Leave empty if not applicable."
          },
          "diagnosisEstablished": {
            "type": "boolean"
          },
          "diseaseProgression": {
            "type": "string",
            "description": "Additional data on the progression of the disease."
          },
          "vitalStatus": {
            "type": "string",
            "enum": [
              "alive",
              "dead",
              "unknown"
            ],
            "description": "Vital status at the last contact."
          },
          "lastContactDate": {
            "type": "string",
            "format": "date",
            "description": "Date of the last contact in YYYY-MM-DD format."
          },
          "deathDate": {
            "type": "string",
            "pattern": "^\\d{4}-(0[1-9]|1[0-2])$",
            "description": "Month and year of death in YYYY-MM format."
          }
        },
        "required": [
          "followUpDate",
          "diagnosisEstablished",
          "diseaseProgression",
          "vitalStatus",
          "lastContactDate"
        ]
      },
      "minItems": 1,
      "description": "For each of the several followups, a new object with the current status is created."
    }
  },
  "required": [
    "followUpRD"
  ]
}